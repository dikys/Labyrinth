<Window x:Class="TeachMe.Appl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeachMe.Appl"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="376.316"
        Width="688.158"
        AllowsTransparency="true"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <Style TargetType="Button">
            <Style.Setters>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Background" Value="LimeGreen"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid x:Name="mainGrid">
        <Border Width="auto" Height="auto" BorderBrush="LimeGreen" Background="#101010" BorderThickness="2">
            <DockPanel LastChildFill="True">
                <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                    <Button x:Name="closingButton" DockPanel.Dock="Right">Закрыть</Button>
                    <Button x:Name="minimizedAndMaximizedButton" DockPanel.Dock="Right">На весь экран</Button>
                    <Button x:Name="foldingButton" DockPanel.Dock="Right">Свернуть</Button>
                    <TextBlock Text="Визуальное программирование робота." Foreground="White"/>
                </DockPanel>
                <DockPanel DockPanel.Dock="Right" Width="150" LastChildFill="False">
                    <ListBox x:Name="currentProgramm" MinHeight="200" DockPanel.Dock="Top"></ListBox>
                    <Button DockPanel.Dock="Top">Редактировать</Button>
                    <Button DockPanel.Dock="Bottom">Запустить</Button>
                </DockPanel>
                <Image></Image>
            </DockPanel>
        </Border>
    </Grid>
</Window>
